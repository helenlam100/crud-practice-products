<% if notice %>
<div id="notice" class="alert alert-success text-center" role="alert"><%= notice %></div>
<% end %>

<p>
<strong>Name:</strong>
<%= @product.name %>
</p>

<p>
<strong>Description:</strong>
<%= @product.description %>
</p>

<p>
<strong>Price:</strong>
<%= @product.price %>
</p>

<p>
<strong>Created at:</strong>
<%= @product.created_at %>
</p>

<p>
<strong>Complete:</strong>
<%= @product.updated_at %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: 'Are you sure?' } %>
